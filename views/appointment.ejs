<!DOCTYPE html>
<html lang="en">
  <%- include ('layout/head'); -%>
  <body>
    <!-- Navigation-->
    <%- include ('layout/navigation'); -%>
    <!-- Page Header-->
    <header
      class="masthead"
      style="background-image: url('assets/img/home-bg.jpeg')"
    >
      <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="site-heading">
              <h1>create your appointment!</h1>
            </div>
          </div>
        </div>
      </div>
    </header>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="container px-4 px-lg-5 mb-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
              <form action="/create_appointment" method="post">
                <div class="row">
                  <div class="col-md-12">
                    <div class="date">
                      <label for="date"
                        >Please enter your appointment booking date</label
                      >
                      <input type="date" name="date" id="date" />
                    </div>
                  </div>
                  <div class="col-md-12 mt-4">
                    <div class="time-slot">
                      <label for="slot"
                        >Please enter your appointment booking slot
                        timing</label
                      >
                      <select name="slot" id="slot">
                        <option value="9:00 am">9:00 am</option>
                        <option value="9:30 am">9:30 am</option>
                        <option value="10:00 am">10:00 am</option>
                        <option value="10:00 am">10:30 am</option>
                        <option value="11:00 am">11:00 am</option>
                        <option value="11:30 am">11:30 am</option>
                        <option value="12:00 pm">12:00 pm</option>
                        <option value="12:30 pm">12:30 pm</option>
                        <option value="01:00 pm">01:00 pm</option>
                        <option value="01:30 pm">01:30 pm</option>
                        <option value="02:00 pm">02:00 pm</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-12 mt-4">
                    <div class="btn-submit">
                      <button
                        type="submit"
                        class="btn btn-primary text-uppercase"
                      >
                        Submit
                      </button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer-->
    <%- include ('layout/footer'); -%>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
  </body>
</html>
